@model OWZX.Web.Admin.Models.LoginModel
@{
    Layout = null;
}
<!DOCTYPE HTML PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>后台登陆页面</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1,maximum-scale=1" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta name="HandheldFriendly" content="true" />
    <link rel="stylesheet" type="text/css" href="/administration/css/login.css" />
    <script src="/administration/scripts/jquery.js" type="text/javascript"></script>
    <script src="/administration/scripts/login.js" type="text/javascript"></script>
    <script type="text/javascript">
    returnUrl = "@Model.ReturnUrl";
        shadowName = "@Model.ShadowName";
        $(function ()
        {
            $("#loginForm .text").on("keydown", function ()
            {
                if (event.keyCode == 13) login();
            });
        })
        
    </script>

</head>
<body >
    <div id="container">
        <div class="div1">
            <p>欢迎登录管理系统</p>
        </div>
        <div class="div2">
            <form id="loginForm" class="formlog">
                <img src="/administration/images/1111.jpg" class="img1" />
                <table>
                    <tr>
                        <td><span>用户名:</span></td>
                        <td><input type="text" name="@Model.ShadowName" size="20" id="@Model.ShadowName" /></td>
                    </tr>
                    <tr>
                        <td><span>密&nbsp;码:</span></td>
                        <td><input type="password" name="password" size="20" id="password" /></td>
                    </tr>
                    <tr>
                        <td><span>验证码:</span></td>
                        <td>
                            <div style="display:inline-block;">
                                <input type="text" name="verifyCode" autocomplete="off" placeholder="验证码" maxlength="4" style="display:inline-block;float: left;width:155px;" />
                                <img id="verifyImage" style="cursor:pointer;margin-left:4px;height:25px;width:70px;" title="点击刷新验证码" onclick="this.src='/tool/verifyimage?time=' + new Date()" src="/tool/verifyimage" width="90" height="47" class="left" /><br />
                            </div>
                        </td>
                    </tr>
                </table>
                <img src="/administration/images/2222.jpg" class="img2" />
                <input id="btn" type="button" onclick="login()" value="登录" />
                <div style="height: 0;overflow: hidden;clear: both;"></div>
            </form>
        </div>
        <div class="tips">
            <p>
                默认用户名：admin，密码：admin，请登录后即时修改<br />
                @*最佳分辨率1024*768，最佳浏览器ie7.0+<br />
                    请确认浏览器开启以下功能：1，允许cookie功能；2，允许弹出窗口*@
            </p>
        </div>
    </div>
</body>
</html>
