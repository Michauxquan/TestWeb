@model OWZX.Model.MD_BackRate
           
@section header{
    <title>编辑回水规则</title>
    <link type="text/css" rel="stylesheet" href="/administration/css/site.css"/>
    <script type="text/javascript" src="/administration/scripts/jquery.js"></script>
    <link href="/components/ueditor/themes/default/css/ueditor.css" rel="stylesheet" />
    <script src="/components/ueditor/ueditor.config.js"></script>
<script src="/components/ueditor/ueditor.all.js"></script>
<script src="/components/ueditor/lang/zh-cn/zh-cn.js"></script>
<script type="text/javascript" src="/administration/scripts/jquery.validate.js"></script>
<script type="text/javascript" src="/administration/scripts/jquery.validate.unobtrusive.js"></script>
<script type="text/javascript" src="/administration/scripts/selectlist.js"></script>
}
@section body{
    <h1 class="rightH1">
        基础资料 &gt;&gt; 回水规则
        <div class="right">
            <a href="@Html.Raw(ViewData["referer"].ToString())" class="menuBT"><img src="/administration/images/goback.jpg" />返回列表</a>
            <div class="clear"></div>
        </div>
        <div class="clear"></div>
    </h1>
    @using(Html.BeginForm())
    {
        <div class="addTable">
            <table width="100%">
                <tr>
                    <td width="100px" align="right">
                        房间类型：
                    </td>
                    <td>
                        <select data-val="true" data-val-required="请选择" id="Roomtypeid" name="Roomtypeid">
                            <option @if (-1 == Model.Roomtypeid) { <text> selected="selected" </text>            } value="0">房间类型</option>
                            @foreach (OWZX.Model.BaseTypeModel info in AdminBaseInfo.GetBaseTypeList("where parentid=19"))
                            {
                                <option @if (info.Systypeid == Model.Roomtypeid) { <text> selected="selected" </text>             } value="@info.Systypeid">@info.Type</option>
                            }
                        </select>

                        @Html.ValidationMessageFor(x => x.Roomtypeid)
                    </td>
                </tr>
                <tr>
                    <td align="right">
                        亏损下限：
                    </td>
                    <td>
                        @Html.TextBoxFor(x => x.Minloss, new { @class = "input", size = "35" })@Html.ValidationMessageFor(x => x.Minloss)
                    </td>
                </tr>
                <tr>
                    <td align="right">
                        亏损上限：
                    </td>
                    <td>
                        @Html.TextBoxFor(x => x.Maxloss, new { @class = "input", size = "35" })@Html.ValidationMessageFor(x => x.Maxloss)
                    </td>
                </tr>
                <tr>
                    <td align="right">
                        比例：
                    </td>
                    <td>
                        @Html.TextBoxFor(x => x.Backrate, new { @class = "input", size = "35" })%@Html.ValidationMessageFor(x => x.Backrate)
                    </td>
                </tr>

                
                <tr>
                    <td align="right">
                        &nbsp;
                    </td>
                    <td>
                        <a href="" class="addBt submit">
                            <img src="/administration/images/submit.jpg" /></a>
                    </td>
                </tr>
                <tr>
                    <td align="right">
                        &nbsp;
                    </td>
                    <td>
                        &nbsp;
                    </td>
                </tr>
            </table>
        </div>
    }
    <script>
        $(".submit").on("click", function ()
        {
            $("form:first").submit();
            return false;
        });
        </script>
    }
}
