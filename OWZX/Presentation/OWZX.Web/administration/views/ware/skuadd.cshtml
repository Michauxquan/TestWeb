@model OWZX.Web.Admin.Models.SkuModel

@section header{
    <title>添加用户</title>
    <link type="text/css" rel="stylesheet" href="/administration/css/site.css"/>
    <script type="text/javascript" src="/administration/scripts/jquery.js"></script>
    <script type="text/javascript" src="/administration/scripts/jquery.validate.js"></script>
    <script type="text/javascript" src="/administration/scripts/jquery.validate.unobtrusive.js"></script>
    <script type="text/javascript" src="/components/my97datepicker/WdatePicker.js"></script> 
    <link type="text/css" href="/components/jbox/Skins/Default/jbox.css" rel="stylesheet" />
<script type="text/javascript" src="/components/jbox/jquery.jBox-2.3.min.js"></script>
<script src="/administration/scripts/selectlist.js"></script>
    <script type="text/javascript"> 

        $(function () {
            $(".addTag li").click(function () {
                $(".addTag li").removeClass("hot");
                $(this).addClass("hot");
                $(".addTable").hide().eq($(this).index()).show(0);

            })

            $(".addBt").click(function() {
                $("form:first").submit();
                return false;
            });
        });
    </script>
}

@section body{
<h1 class="rightH1">
商品管理 &gt;&gt; 添加规格
<div class="right">
<a href="@Html.Raw(ViewData["referer"].ToString())" class="menuBT"><img src="/administration/images/goback.jpg"/>返回列表</a>
<div class="clear"></div>
</div>
<div class="clear"></div>
</h1>
<ul class="addTag">
        <li class="hot"><a href="javascript:;">基本信息</a></li> 
        <div class="clear">
        </div>
    </ul>

@using (Html.BeginForm())
{
<div class="addTable">
<table width="100%">
  <tr>
    <td width="86px" align="right">商品编码：</td>
    <td>@Html.TextBoxFor(x => x.WareCode, new { @class = "input", size = "35", @readonly = true })@Html.ValidationMessageFor(x => x.WareCode)</td>
    </tr>
    <tr>
        <td width="86px" align="right">规格编码：</td>
        <td>@Html.TextBoxFor(x => x.SpecCode, new { @class = "input", size = "35"})@Html.ValidationMessageFor(x => x.SpecCode)</td>
    </tr>
    <tr>
        <td align="right">商品名称：</td>
        <td>@Html.TextBoxFor(x => x.SpecName, new { @class = "input", size = "35" })@Html.ValidationMessageFor(x => x.SpecName)</td>
    </tr>
    <tr>
        <td align="right">单价：</td>
        <td>@Html.TextBoxFor(x => x.Price, new { @class = "input", size = "35" })@Html.ValidationMessageFor(x => x.Price)</td>
    </tr>
    <tr>
        <td align="right">参与人数：</td>
        <td>@Html.TextBoxFor(x => x.UserNum, new { @class = "input", size = "35" })@Html.ValidationMessageFor(x => x.UserNum)</td>
    </tr>
    <tr>
        <td align="right">状态：</td>
        <td>@Html.DropDownListFor(x => x.Status, ViewData["statusGroupList"] as List<SelectListItem>)@Html.ValidationMessageFor(x => x.Status)</td>
    </tr> 
  <tr>
    <td align="right">&nbsp;</td>
    <td>
    <a href="" class="addBt" id="sumbitBut1" ><img src="/administration/images/submit.jpg" /></a>
    </td>
    </tr>
  <tr>
    <td align="right">&nbsp;</td>
    <td>&nbsp;</td>
    </tr>
</table>
</div>
     
}
}