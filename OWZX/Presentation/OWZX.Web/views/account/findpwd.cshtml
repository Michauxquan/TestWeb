@model OWZX.Web.Models.FindPwdModel
@{
    Layout = null;
}
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>找回密码-@{@WorkContext.ShopConfig.SiteTitle}</title>
    @Html.Raw(WorkContext.ShopConfig.SEOKeyword)
    @Html.Raw(WorkContext.ShopConfig.SEODescription)
    <link href="@{@WorkContext.CSSCDN}/css/base.css" rel="stylesheet" type="text/css" />
    <link href="@{@WorkContext.CSSCDN}/css/account.css" rel="stylesheet" type="text/css" />
    <script src="@{@WorkContext.ScriptCDN}/scripts/jquery.js" type="text/javascript"></script>
    <script src="@{@WorkContext.ScriptCDN}/scripts/account.js" type="text/javascript"></script>
    <script type="text/javascript">
        shadowName = "@Model.ShadowName";
    </script>
</head>

<body>
    
@Html.Partial("_header")

<div class="findPassword box"style="width: 760px;margin: 70px auto;border: solid 2px #ddd; border-radius: 10px;">
    <div style="width: 100px;margin: 0 auto;"><h2 >找回登录密码</h2></div>
    <div class="step">
        <ul>
            <li class="hot"><s>1</s>验证身份</li>
            <li><s>2</s>选择找回方式</li>
            <li><s>4</s>设置新密码</li>
            <li><s>4</s>完成</li>
            <div class="clear"></div>
        </ul>
    </div>

    <form name="findPwdForm" action="">
        <table style="width: 300px;margin: 0 auto; padding: 20px 0;" border="0" cellspacing="0" cellpadding="0">
            <tr>
           @*     <th width="190"><em>*</em>账户名：</th>*@
                <td align="center"><em></em><input type="text" name="@Model.ShadowName" value="" placeholder="*账户名"  class="text userName"/></td>
            </tr>
            @if (Model.IsVerifyCode)
            {
                <tr>
                @*    <th><em>*</em>验证码：</th>*@
                    <td><table width="100%" border="0" cellspacing="0" cellpadding="0">
                            <tr>
                                <td width="132"><em> </em><input type="text" name="verifyCode"  placeholder="*验证码" autocomplete="off" class="YZM text"/></td>
                                <td><img id="verifyImage" width="100" height="36" style="margin-left: 5px;" title="点击刷新验证码" onclick="this.src = '/tool/verifyimage?time=' + new Date()" src="/tool/verifyimage"/></td>
                            </tr>
                        </table>
                    </td> 
                </tr>
            }
            <tr>
                @*<td align="right">&nbsp;</td>*@
                <td align="center"><a href="#" class="passBt redBT" style="height: 30px; line-height: 30px; border-radius: 4px;" onclick="findPwd()">下一步</a></td>
       
            </tr>
        </table>
    </form>
</div>


@Html.Partial("_footer")
</body>
</html>
