
@{
    Layout = null;
}
@model OWZX.Web.Models.LoginModel
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>用户登录-@{@WorkContext.ShopConfig.SiteTitle}</title>
    @Html.Raw(WorkContext.ShopConfig.SEOKeyword)
    @Html.Raw(WorkContext.ShopConfig.SEODescription)
    <link href="@{@WorkContext.CSSCDN}/css/base.css" rel="stylesheet" type="text/css" />
    <link href="@{@WorkContext.CSSCDN}/css/account.css" rel="stylesheet" type="text/css" />
    <link href="@{@WorkContext.CSSCDN}/css/lgstyle.css" rel="stylesheet" />
    <script src="@{@WorkContext.ScriptCDN}/scripts/jquery.js" type="text/javascript"></script>
    <script src="@{@WorkContext.ScriptCDN}/scripts/account.js" type="text/javascript"></script>
    <script src="@{@WorkContext.ScriptCDN}/components/layer/layer.js"></script>
    <script type="text/javascript">
        returnUrl = "@Model.ReturnUrl";
        shadowName = "@Model.ShadowName";
        $(function () {
            $(".cf .loginBt").on("keydown", function () {
                if (event.keyCode == 13) login();
            });
            $('.loginBt').click(function () { login(); });
        })

    </script>
    <style>
            
    </style>
</head>

<body style="">
@Html.Partial("_header") 
    <!--登录-->
    <div style="height: 450px;"> 
        <div style="width:760px;margin:90px auto 0px auto;background:#0e6a49; border: solid 2px #ddd; border-radius: 10px;">
            <div class="lanrenzhijia" style="float: right; margin-right: 10px;padding-right:30px; background: #ffffff61; ">
                <div class="product-wrap" style="width:300px;">
                    <span class="ml0" style="font-size: 16px; color: #000;">
                                    欢迎登录本站，如果您没有帐号，<a style="color:white; font-size: 12px;" href="@Url.Action("register")">[免费注册]</a>
                                </span>
                    <div class="product show">
                        <form name="loginForm" action="">
                            <ul class="cf">
                                <li class="ml0">
                                    <input class="b1" type="text" name="@Model.ShadowName" id="@Model.ShadowName" placeholder="用户名" value="" /><br/>
                                    <span class="phone" style="font-size: 12px; color: #0e6a49; height: 22px;"></span><br/>
                                    <input class="b1" type="password" id="password" name="password" placeholder="密码" value=""/><br/>
                                    <span class="password" style="font-size: 12px; color: #0e6a49; height: 22px;"></span><br/>
                                    <input class="b1" type="text" id="verifyCode" name="checkcode"  style="width: 100px;" placeholder="验证码" value=""  />
                                    <img id="verifyCode1" style="cursor:pointer;margin:0 0 0 14px; width: 106px;height:36px;vertical-align:middle;" title="点击刷新验证码" onclick="this.src = '/tool/verifyimage?time=' + new Date()" src="/tool/verifyimage" /><br/>
                                    <span class="code" style="font-size: 12px; color: #0e6a49; height: 22px;"></span><br />
                                </li>
                                <li style="height: 20px; line-height: 20px; margin-top: 10px; text-align: right;float:right;"> 
                                    <span style="text-align:right;color: #3b3b3b;padding-right:20px;"><a style="color: white;" href="@Url.Action("findpwd")">忘记密码?</a></span>
                                </li>
                                <li class="loginBt">
                                    <a class="redBT loginIn" style="text-align: center;" href="javascript:void(0)">登录</a>
                                </li> 
                            </ul>
                        </form>
                    </div>
                </div>
            </div>
            <div style="float:left;" ><img style="width: 370px; height: 239px;margin-top:77px" src="../images/baseimg/dl.jpg"/></div>
            <div class="clear"></div>
        </div>
    </div> 
    @Html.Partial("_footer")
    </body>
    </html>

