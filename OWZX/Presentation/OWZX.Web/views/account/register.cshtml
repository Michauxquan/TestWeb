@model OWZX.Web.Models.RegisterModel
@{
    Layout = null;
}
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>用户注册-@{@WorkContext.ShopConfig.SiteTitle}</title>
    @Html.Raw(WorkContext.ShopConfig.SEOKeyword)
    @Html.Raw(WorkContext.ShopConfig.SEODescription)
    <link href="@{@WorkContext.CSSCDN}/css/base.css" rel="stylesheet" type="text/css" />
    <link href="@{@WorkContext.CSSCDN}/css/account.css" rel="stylesheet" type="text/css" />
    <script src="@{@WorkContext.ScriptCDN}/scripts/jquery.js" type="text/javascript"></script>
    <script src="@{@WorkContext.ScriptCDN}/scripts/common.js"></script>
                <script src="@{@WorkContext.ScriptCDN}/scripts/account.js" type="text/javascript"></script>
        <script src="@{@WorkContext.ScriptCDN}/components/layer/layer.js"></script>
    <script type="text/javascript">
        returnUrl = "@Model.ReturnUrl";
        shadowName = "@Model.ShadowName";
        $(function() {
            $(".cf input").on("keydown", function() {
                if (event.keyCode == 13) register();
            });
        });
        
    </script>
    <style>
        .send_auto { 
    width: 123px;
    height: 36px;
    border: 1px solid #eee;
    background-color: #eee;
    padding:0;
    cursor: pointer;
    color: #666;
    margin-left:4px;
        }
        .send_auto:hover {
    background-color: #e8e8e8;
}
        .b2 {width:250px;height:34px; padding-left:13px;outline: medium;border:1px solid #cdcdcd;
        }
        .al {border-color:#0e6a49;
        }
        .btnreg{width: 280px; height: 40px; background: #0e6a49; border: none; outline: medium; margin-top: 20px; color: #ffffff; font-size: 14px;}
        .btnreg:hover{ background: #0e6a49;}
        em {
            background-position: -51px -165px;
            float: left;
            margin-right: 3px;
            width: 15px;
            height: 15px;
            position: relative;
            top: 4px;
            background: url('../../images/error.png') no-repeat;
            overflow: hidden;
        }
    </style>
</head>

<body>

@Html.Partial("_header") 
     
<div style="height: 450px;">
    <div style="width: 860px; margin: 60px auto 0px auto; background: #0e6a49; border: solid 2px #ddd; border-radius: 10px;">
        <div style="float: right; width: 280px; margin: 0 10px; background: #ffffff61; padding:15px; padding-right: 30px;">
            <div class="product-wrap">
                <span class="ml0" style="font-size: 16px; color: #000;">
                                 我已经注册，现在就，<a href="@Url.Action("login")" style="color:white; font-size: 12px;" >[去登录]</a>
                                </span>
                <div class="product show">
                    <form name="registerForm" id="registerForm" action="">
                        <ul class="cf">
                            <li class="ml0" style="padding-top: 20px;">
                                <input class="b2" type="text" placeholder="用户名" id="@Model.ShadowName" name="@Model.ShadowName" autocomplete="off"/><br/>
                                <span class="a1" style="font-size: 12px; color: #0e6a49; height: 24px;"></span><br/>
                                <input class="b2" type="text" placeholder="昵称" name="loginname" id="loginname" autocomplete="off"/><br/>
                                <span class="a2" style="font-size: 12px; color: #0e6a49; height: 24px;"></span><br/>
                                <input class="b2" type="password" placeholder="密码" name="password" id="password" autocomplete="off"/><br/>
                                <span class="a3" style="font-size: 12px; color: #0e6a49; height: 24px;"></span><br/>
                                <input class="b2" type="password" placeholder="确认密码" name="confirmPwd" id="confirmPwd" autocomplete="off"/><br/>
                                <span class="a4" style="font-size: 12px; color: #0e6a49; height: 24px;"></span><br/>
                                <input class="b2" type="text" placeholder="邀请码" name="invitecode" value="@Model.InviteCode" id="invitecode" autocomplete="off" /> <br />
                                <span   style="font-size: 12px; color: #0e6a49; height: 24px; display: none;"></span><br />

                                <input class="b2" style="width: 120px;" maxlength="6" name="verifyCode" id="verifyCode" type="text" placeholder="验证码" autocomplete="off"/>
                                <img onclick="this.src='/tool/verifyimage?time=' + new Date()" src="/tool/verifyimage" alt="验证码" style="cursor:pointer;width:100px; float:right; margin-right:16px;height:36px; "> 
                                <span class="a5" style="font-size: 12px; color: #0e6a49; height: 24px;"></span><br/>
                            </li>
                            <li class="btn">
                                <input class="btnreg" type="button" value="立即注册" onclick="register()"/>
                            </li>
                        </ul>
                    </form>
                </div>
            </div>
        </div>
        <div style="float:left;"><img style="margin-top: 58px;" src="../images/baseimg/dl.jpg"/></div>
         <div class="clear"></div>
    </div>
</div>
    @Html.Partial("_footer")
</body>
</html>