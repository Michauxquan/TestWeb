                    <span style="z-index: 0; color: #fff; font-size: 13px; position: absolute; bottom: 5px; font-size: 20px; text-align: center; width: 250px;">@(info.WareName + info.SpecName.Replace("万", "W"))</span>
                </div>
                <div style="float: left; height: 236px; margin-left: 265px; position: absolute; font-weight: bold; font-size: 16px; margin-top: 20px;">
