@model OWZX.Web.WareSkuList
@{
    Layout = null;
}
<!DOCTYPE HTML PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>兑换详情-@{@WorkContext.ShopConfig.SiteTitle}</title>
    @Html.Raw(WorkContext.ShopConfig.SEOKeyword)
    @Html.Raw(WorkContext.ShopConfig.SEODescription)
    <link href="@{@WorkContext.CSSCDN}/css/base.css" rel="stylesheet" type="text/css" />
    <link href="@{@WorkContext.CSSCDN}/css/lottery.css" rel="stylesheet" />
    <script src="@{@WorkContext.ScriptCDN}/scripts/jquery.js" type="text/javascript"></script>
    <script src="@{@WorkContext.ScriptCDN}/scripts/common.js" type="text/javascript"></script> 
    <script type="text/javascript">
        uid = @WorkContext.Uid; 
    </script>
</head>
<body>
    @Html.Partial("_header")
    @using (Html.BeginForm())
{
<div class="bigBox">
<div class="box" style="border: solid 1px #ddd;">
    <div style="height: 45px; line-height: 40px; background: #E9454E; color: #fff; font-size: 16px; font-weight: bolder;">
        <img src="../images/baseimg/liebiao.png" style="width: 30px; height: 30px;margin-left: 15px; margin-top: 7px; float: left;" /> &nbsp;
        <a title="返回兑换列表" href="@Url.Action("changelist","changeware")"=changelist","changeware")" style="color: #fff;float: left;margin-top: 3px;margin-left: 5px;">兑换详情</a>
    </div>
  <div style="padding-top: 25px; min-height: 400px;">
        @foreach (OWZX.Model.MD_Ware info in Model.WareList)
        {

            <div class="wareinfo" style="margin-left: 20px;">
                <div style="width: 250px; height: 236px; float: left; position: absolute;">
                    <img  src="@(WorkContext.ImageCDN+"/"+info.ImgSrc)" style="width: 250px;  height: 236px; z-index: 0; position: absolute;"/>
                    <span style="z-index: 0; color: #fff; font-size: 13px; position: absolute; bottom: 5px; font-size: 20px;text-align: center; width: 250px;">@(info.WareName + info.SpecName.Replace("万", "W"))</span>
                </div>
                <div style="float: left;height: 236px; margin-left: 265px; position: absolute; font-weight: bold; font-size: 16px; margin-top: 20px;">
                    <p style="text-align: center; width: 160px; color: #000;">@(info.WareName + info.SpecName)</p> 
                    <p style="text-align: center; width: 160px;" class="Fred">@(info.Price)</p> 
               
                <div style="width: 100px; height: 30px; margin-left: 20px; position: absolute; bottom: 20px; line-height: 28px; font-size: 16px; text-align: center; cursor: pointer;" class="greenBT">
                    <a href="#" style="color:#fff;">立刻兑换</a>
                </div>
                </div>
           </div>
        }  
    </div>   
</div> 
</div>

}
    
 @Html.Partial("_footer")
</body>
</html>