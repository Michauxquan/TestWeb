@{
    Layout = null;
}
<!DOCTYPE HTML PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>错误</title>
    <link href="@{@WorkContext.CSSCDN}/css/base.css" rel="stylesheet" type="text/css" />
    <script src="@{@WorkContext.ScriptCDN}/scripts/jquery.js" type="text/javascript"></script>
    
    <style>
        #message {
            width: 100%;
            overflow: hidden;
            padding: 1.8rem 0;
        }

            #message .icon {
                width: 6rem;
                height: 6.5rem;
                overflow: hidden;
                margin: 1.2rem auto 0.6rem;
            }

            #message .iconfont:before {
                width: 6rem;
                height: 6.5rem;
                font-size: 6rem;
                text-align: center;
                line-height: 6rem;
                display: block;
            }

            #message .icon-01icon:before {
                color: #d81414;
            }

            #message .title {
                width: 100%;
                font-size: 1.2rem;
                line-height: 2rem;
                text-align: center;
            }

            #message .desc {
                width: 100%;
                font-size: 1rem;
                color: #787878;
                line-height: 1.2rem;
                text-align: center;
            }

            #message .btn {
                width: 94%;
                height: 3rem;
                padding: 2rem 3%;
            }

        #confirm {
            width: 100%;
            height: 3rem;
            display: block;
            border-radius: 5px;
            text-align: center;
            line-height: 3rem;
            font-size: 1rem;
            color: #ffffff;
            background-color: #1c9f1a;
        }
    </style>

</head>

<body>
    <div id="message">
        <div class="icon"><i class="iconfont icon-01icon"></i></div>
        <div class="info">
            <h2 class="title">错误</h2>
            @{
                string msg = ViewData["Message"] as string;
                if (string.IsNullOrWhiteSpace(msg))
                {
                    <p class="desc">发生了错误，请重试！</p>
                }
                else
                {
                    <p class="desc">@msg</p>
                }
            }
        </div>
        
    </div>
</body>