@model OWZX.Web.Models.NewsModel
@{
    Layout = null;
}
<html>
<head>
    <title>@{@WorkContext.ShopConfig.SiteTitle}<</title>
    <meta http-equiv="Content-Type" content="text/html;charset=utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1,maximum-scale=1,user-scalable=no" />
    <meta http-equiv="X-UA-Compatible" content="IE=Edge，chrome=1" />
    <meta name="description" content="不超过150个字符" />
    <meta name="keywords" content="" />
    <meta name="format-detection" content="telephone=no" />
    <meta name="robots" content="index,follow" />
    <meta name="renderer" content="webkit" />
    <meta http-equiv="Cache-Control" content="no-siteapp" />
    <meta name="HandheldFriendly" content="true" />
    <meta name="msapplication-tap-highlight" content="no" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="black" />
    <meta name ="mobile-web-app-capable"  content="yes">
        <style type="text/css">
            * {
                margin: 0;
                padding: 0;
                font-family: "黑体";
                font-size: 1.1rem;
            }

            body {
                background: #FFD879;
                overflow-x: hidden;
            }

            .container {
                padding-left: 1rem;
                margin-bottom: 2rem;
                padding-right: 0.3rem;
            }

                .container div {
                    border: 1px solid #aaa;
                    margin-top: .8rem;
                    padding: 1rem .4rem .5rem;
                }

            p {
                color: #666;
            }

            div p:first-child {
                line-height: 1.2rem;
                color: white;
                background: #47C1A8;
                float: left;
                margin-bottom: .6rem;
                text-indent: 1rem;
                margin-left: -1.2rem;
                font-size: 1.3rem;
                border-top-right-radius: .4rem;
                border-bottom-right-radius: .4rem;
                color: white;
                padding: .4rem 0;
                position: relative;
                border: 1px solid #dedede;
            }

            p {
                clear: both;
            }

            div p:first-child img {
                width: .8rem;
                position: absolute;
                bottom: -.8rem;
                left: 0;
            }
        </style>
        <script type="text/javascript" src="js/jquery-1.12.1.js"></script>
        <script type="text/javascript" src="js/resize.js"></script>

        <!--[if lt IE 9]>
            <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
            <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
        <![endif]-->
    </meta name>
</head>
<body>
    <div class="container">
        <h1 class="newsTitle">@Model.NewsInfo.Title</h1>
        <div class="newsInfo">时间：@Model.NewsInfo.AddTime</div>
        <div class="edit">
            @Html.Raw(Model.NewsInfo.Body)
        </div>

    </div>
</body>
</html>