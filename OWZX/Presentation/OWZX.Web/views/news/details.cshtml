@model OWZX.Web.Models.NewsModel
@{
    Layout = null;
}
<html>
<head> 
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1,maximum-scale=1,user-scalable=no" />
    <meta http-equiv="X-UA-Compatible" content="IE=Edge，chrome=1" />
    <meta name="description" content="不超过150个字符" />
    <meta name="keywords" content="" />
    <meta name="format-detection" content="telephone=no" />
    <meta name="robots" content="index,follow" />
    <meta name="renderer" content="webkit" />
    <meta http-equiv="Cache-Control" content="no-siteapp" />
    <meta name="HandheldFriendly" content="true" />
    <meta name="msapplication-tap-highlight" content="no" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="black" />
    <meta name ="mobile-web-app-capable"  content="yes">
        <title>明细-@{@WorkContext.ShopConfig.SiteTitle}</title>
        @Html.Raw(WorkContext.ShopConfig.SEOKeyword)
        @Html.Raw(WorkContext.ShopConfig.SEODescription)
        <link href="@{@WorkContext.CSSCDN}/css/base.css" rel="stylesheet" type="text/css" />
        <link href="@{@WorkContext.CSSCDN}/css/help.css" rel="stylesheet" type="text/css" />
        <script src="@{@WorkContext.ScriptCDN}/scripts/jquery.js" type="text/javascript"></script>
        <script src="@{@WorkContext.ScriptCDN}/scripts/common.js" type="text/javascript"></script>
        <script type="text/javascript" src="@{@WorkContext.ScriptCDN}/scripts/resize.js"></script>

        <script type="text/javascript">
            uid = @WorkContext.Uid;
        </script>

        <style type="text/css">
            * {
                margin: 0;
                padding: 0;
                font-family: "黑体";
                /*font-size: 1.1rem;*/
            }

            /*body {
                background: #FFD879;
                overflow-x: hidden;
            }*/

            .container {
                padding-left: 1rem;
                margin-bottom: 2rem;
                padding-right: 0.3rem;
            }

                .container div {
                    border: 1px solid #aaa;
                    margin-top: .8rem;
                    padding: 1rem .4rem .5rem;
                }

            p {
                color: #666;
            }

            div p:first-child {
                line-height: 1.2rem;
                
                /*background: #0e6a49;*/
                float: left;
                margin-bottom: .6rem;
                text-indent: 1rem;
                font-size: 14px;
                border-radius: .4rem;
                /*color: white;*/
                padding: .4rem .1rem;
                position: relative;
                border: 1px solid #dedede;
            }

            p {
                clear: both;
            }

            div p:first-child img {
                width: .8rem;
                position: absolute;
                bottom: -.8rem;
                left: 0;
            }
        </style>

        <!--[if lt IE 9]>
            <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
            <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
        <![endif]-->
    </meta name>
</head>
             <body>
             @Html.Partial("_header")
             <div class="container box">
                 <div class="newsInfo" style="background-color: #e4393c; color: #ffffff; padding: 10px 0px;">
                     
                     <span style="float: left; margin-left: 24px;font-size: 15px;"><a href="/news/list" style="font-size:16px;    font-weight: bolder;color:white;">活动中心 》</a> @Model.NewsInfo.Title</span>
                     <span style="float: right; margin-right: 24px; font-size: 14px;"> @Model.NewsInfo.AddTime</span>
                     <span class="clear"></span>
                 </div>
                 <div class="edit" style="height:100%;padding:15px;">
                     @Html.Raw(Model.NewsInfo.Body)
                 </div>

             </div>

             @Html.Partial("_footer")
             </body>
</html>