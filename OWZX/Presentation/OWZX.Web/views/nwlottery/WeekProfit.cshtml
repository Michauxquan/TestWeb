<!DOCTYPE HTML PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=9" />
    <title>游戏乐园-@{@WorkContext.ShopConfig.SiteTitle}</title>
    <link href="@{@WorkContext.CSSCDN}/css/base.css" rel="stylesheet" type="text/css" />
    <link href="@{@WorkContext.CSSCDN}/css/lottery.css" rel="stylesheet" />
    <script src="@{@WorkContext.ScriptCDN}/scripts/jquery.js" type="text/javascript"></script>
    <script src="@{@WorkContext.ScriptCDN}/scripts/common.js" type="text/javascript"></script>
    <script src="@{@WorkContext.ScriptCDN}/scripts/lottery.js"></script>
    <link href="/components/layer/skin/layer.css" rel="stylesheet" />
    <script src="/components/layer/layer.js"></script>
</head>
<body style="background: url('/images/bg.jpg') no-repeat;background-size:  100% 90%; background-position: bottom;">
    @Html.Partial("_header")
    <div class="content">
        <table class="con_table" id="bettrecord" cellpadding="0" cellspacing="1" align="center"
               style="width:910px; color: Black; margin-bottom: 4px;margin-top:5px; border:1px solid #eee;border-left:none; border-top:2px solid #0e6a49;">
            @{

            }
            <tr>
                <th width="10%" style="height: 28px;">游戏名称</th>
                <th width="10%" style="height: 28px">今天</th>
                <th width="9%" style="height: 28px">昨天</th>
                @for (int i = 2; i <= 6; i++)
                {
                string time = DateTime.Now.AddDays(-i).ToString("yyyy-MM-dd");
                <th width="9%" style="height: 28px">@time</th>
                }

            </tr>
            @{
            double total = 0.0;
            }
            @foreach (DataRow info in ((DataTable)@ViewData["week"]).Rows)
            {
            string result = string.Empty;

            result = info["type"].ToString();
            <tr>
                <td>@result</td>
                @for (int j = 2; j <= 8; j++)
                {
                    total += double.Parse(info[info.Table.Columns[j].ColumnName].ToString() == "" ? "0" : info[info.Table.Columns[j].ColumnName].ToString());
                <td>@info[info.Table.Columns[j].ColumnName]</td>
                }
            </tr>
            }
            <tr>
                <td>合计：</td>
                <td colspan="7">@total</td>
            </tr>
        </table>
    </div>
    @Html.Partial("_footer")
</body>
</html>
