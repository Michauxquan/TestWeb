@model LotteryModel

<!DOCTYPE HTML PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=8" />
    <title>游戏乐园-@{@WorkContext.ShopConfig.SiteTitle}</title>
    @Html.Raw(WorkContext.ShopConfig.SEOKeyword)
    @Html.Raw(WorkContext.ShopConfig.SEODescription)
    <link href="@{@WorkContext.CSSCDN}/css/base.css" rel="stylesheet" type="text/css" />
    <link href="@{@WorkContext.CSSCDN}/css/lottery.css" rel="stylesheet" />
    <script src="@{@WorkContext.ScriptCDN}/scripts/jquery.js" type="text/javascript"></script>
    <script src="@{@WorkContext.ScriptCDN}/scripts/common.js" type="text/javascript"></script>
    <script src="@{@WorkContext.ScriptCDN}/scripts/lottery.js"></script>
    <link href="/components/layer/skin/layer.css" rel="stylesheet" />
    <script src="/components/layer/layer.js"></script>
    <script type="text/javascript">
        uid = @WorkContext.Uid;
        lotterytype=@Model.LotteryType;
        isbett=0;
        $(function(){
            $("#navItme li").removeClass("hot");
            $("#navItme li:eq(3)").addClass("hot");
            $("#ltItme li div").removeClass("hot");
            $("#ltItme li:eq(1) a div").addClass("hot");
            $(".sec_head a").click(function(){
                if($(this).index()>3 &&uid<=0)
                {
                    layer.alert("<div style='text-align:center;'>请登录</div>",{title:"提示"});
                    return;
                }
                $(".sec_head a").removeClass("hot");
                $(this).addClass("hot");
            });
        });
    </script>
</head>
<body>
    @Html.Partial("_header")
    @Html.Partial("_ltheader")
    <div class="content">
        <div class="sec_head">
            <a href="javascript:loadpage('lottery')" target="_parent" class="hot" >蛋蛋28首页</a>
            <span class="wh12"> | </span>
            <a href="javascript:loadpage('rule')" target="_parent">游戏规则</a>
            <span class="wh12">|</span>
            <a href="javascript:loadpage('bettrecords')" target="_parent">投注记录</a>
            <span class="wh12">|</span>
            <a href="javascript:loadpage('models')" target="_parent">模式编辑</a>
            <span class="wh12">|</span>
            <a href="javascript:loadpage('autobett')" target="_parent">自动投注</a>
        </div>
        <div class="lot_content">
            
            <div class="dv">
                @if(@Model.lotterylist.Prev_Lottery.Expect !=null)
                {
                <div class="ltnumber">
                    <h4 style="padding-top:10px;">第 @Model.lotterylist.Prev_Lottery.Expect 期</h4>开奖结果
                </div>
                <div style="width:80%;display:block;float:left;line-height:35px;border-top:1px solid #ECECEC;border-bottom:1px solid #ECECEC;font-weight:600;">
                    <div style="padding-left:50px;">
                        <span class="ltnum1">@Model.lotterylist.Prev_Lottery.Orderresult.Substring(0, 17)</span>&nbsp;&nbsp;&nbsp;
                        <span class="ltnum2">@Model.lotterylist.Prev_Lottery.Orderresult.Substring(18, 17)</span>&nbsp;&nbsp;&nbsp;
                        <span class="ltnum3">@Model.lotterylist.Prev_Lottery.Orderresult.Substring(36, 17)</span>
                        <a href="http://www.bwlc.net/bulletin/keno.html" style="color:#666;float:right;">[官方查询]</a>
                    </div>
                    <div style="border-top:1px solid #ECECEC;padding-left:50px;">
                        <span style="font-size:15px;">一区号码: <span class="ltresult">@Model.lotterylist.Prev_Lottery.First</span></span>
                        <span style="margin-left:60px;font-size:15px;">二区号码: <span class="ltresult">@Model.lotterylist.Prev_Lottery.Second</span></span>
                        <span style="margin-left:60px;font-size:15px;">三区号码: <span class="ltresult">@Model.lotterylist.Prev_Lottery.Three</span> </span>
                        <span style="margin-left:60px;font-size:15px;">结果: <span class="ltresult pcresult">
                            @{string resnum = int.Parse(@Model.lotterylist.Prev_Lottery.Resultnum).ToString("d2");}
                            @resnum
                            </span></span>
                    </div>
                </div>
                }else
                {
                  @:暂无历史开奖
                }
            </div>
            <div class="dv">
                <div style="width:30%; display:block;float:left;" class="remains">
                    第 <i class="bold">@Model.lotterylist.LastNumber</i>期
                    @if (@Model.lotterylist.RemainS >= 30 && @Model.lotterylist.RemainS <= 270)
                    {
                        <text>还有<span class="ltwarn">@Model.lotterylist.RemainS</span>秒停止下注!</text>
                    }
                    else if (@Model.lotterylist.RemainS > 0 && @Model.lotterylist.RemainS < 30)
                    {
                        <text>停止下注,还有<span class="ltwarn">@Model.lotterylist.RemainS</span>秒开奖!</text>
                    }
                    else if (@Model.lotterylist.RemainS > -60 && @Model.lotterylist.RemainS <= 0)
                    {
                        <text>正在开奖,请稍后!</text>
                    }
                </div>
                <script>
                    $(function(){
                        GetRTime(1,@Model.lotterylist.RemainS,@Model.lotterylist.LastNumber,270,30)
                    });
                </script>
                <div style="width:30%;display:block;float:left;">
                今日盈亏: <span class="ltwarn">@Model.lotterylist.TdProf</span> 参与: <i class="bold">@Model.lotterylist.TdBettNum</i>期 胜率: <i class="bold">@Model.lotterylist.WinPercent%</i></div>
                <div style="width:40%; display:block;float:left;text-align:right;">最高投注<span class="ltwarn">2,000</span>万豆,最高中奖 <span class="ltwarn">100,0000</span>万豆</div>
            </div>
            <div class="temp_content">
                @Html.Partial("_content")
            </div>
            
        </div>
        <div class="clear"></div>
        </div>
    <script>
    function loadpage(type)
    {
        if(type=="bett" || type=="bettrecords" ||type=="models" ||type=="autobett" )
        {
            if(uid<=0)
            {
                layer.alert("<div style='text-align:center;'>请登录</div>",{title:"提示"});
                return;
            }
        }
        isbett=0;
        switch(type)
        {
            case 'lottery':
                $(".temp_content").load("/nwlottery/_content",{"type":lotterytype,"page":1});
                break;
            case 'bett':
                isbett=1;
               
                $(".temp_content").load("/nwlottery/_bettpage",{"type":lotterytype});
                break;
            case 'rule':
                $(".temp_content").load("/nwlottery/_ltrule");
                break;
            case 'bettrecords':
                $(".temp_content").load("/nwlottery/_bettrecord",{"type":lotterytype,"page":1});
                break;
            case 'models':
                $(".temp_content").load("/nwlottery/_bettmode",{"type":lotterytype});
                break;
            case 'autobett':
                //$(".temp_content").load("/nwlottery/_autobett",{"type":lotterytype});
                break;
            
        }
    }
        $(function(){
        
        });
    </script>
    @Html.Partial("_footer")
</body>
</html>