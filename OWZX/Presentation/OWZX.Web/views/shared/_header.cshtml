<div id="jquery_jplayer_1" style="display: none;"></div>
<script>
    var online = new Array();
    online[0] = 1;
    uid=@WorkContext.Uid;
    $(function() {
        if(uid>0)
        {
            $.post('/ucenter/getusermoney', {}, function(data) {
                var result = eval("(" + data + ")");
                $('.usertotalmoney').html(transStr(parseFloat(result.content.totalmoney).toFixed(0)));
                $('.banktotalmoney').html(transStr(parseFloat(result.content.bankmoney).toFixed(0)));
            });
            setInterval(function() {  if (@WorkContext.Uid > 0) {
                $.post('/ucenter/getusermoney', {}, function(data) {
                    var result = eval("(" + data + ")");
                    $('.usertotalmoney').html(transStr(parseFloat(result.content.totalmoney).toFixed(0)));
                    $('.banktotalmoney').html(transStr(parseFloat(result.content.bankmoney).toFixed(0)));
                });
            } }, 8000);
        }
        $("#jquery_jplayer_1").jPlayer({
            swfPath: "/script",
            ready: function () {
                $(this).jPlayer("setMedia", {
                    mp3: "/images/security.mp3"
                });
            },
            supplied: "mp3",
            wmode: "window"
        });

        $(".weekprofit").click(function () {
            if (uid <= 0) {
                layer.alert("<div style='text-align:center;'>请登录</div>", { title: "提示" });
                return;
            }
            window.location.href="/nwlottery/weekprofit";
        });
    });

    function seltitle(type)
    {
        switch(type)
        {
            case 1:
                window.location.href = '/nwlottery/ltindex/1'
                $(".dv_title").css("background","url(../../images/new/t1.png) no-repeat");
                break;
            case 2:
                window.location.href = '/nwlottery/ltindex/2';
                $(".dv_title").css("background","url(../../images/new/t2.png) no-repeat");
                break;
        }
    }
</script>
