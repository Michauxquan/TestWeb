@model OWZX.Web.Models.UserInfoModel
@{
    Layout = null;
}
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>用户信息-@{@WorkContext.ShopConfig.SiteTitle}</title>
    @Html.Raw(WorkContext.ShopConfig.SEOKeyword)
    @Html.Raw(WorkContext.ShopConfig.SEODescription)
    <link href="@{@WorkContext.CSSCDN}/css/base.css" rel="stylesheet" type="text/css" />
    <link href="@{@WorkContext.CSSCDN}/css/ucenter.css" rel="stylesheet" type="text/css" />
    <script src="@{@WorkContext.ScriptCDN}/scripts/jquery.js" type="text/javascript"></script> 
    <script src="@{@WorkContext.ScriptCDN}/scripts/common.js" type="text/javascript"></script>
    <script src="@{@WorkContext.ScriptCDN}/scripts/ucenter.user.js" type="text/javascript"></script>
    <script type="text/javascript">
        uid = @WorkContext.Uid;
        isGuestSC = @WorkContext.ShopConfig.IsGuestSC;
        scSubmitType = @WorkContext.ShopConfig.SCSubmitType; 
    </script>
</head>

<body>
@Html.Partial("_header")

<div class="bigBox" id="member">
<div class="box">
@Html.Partial("_menu")
<div id="memberR">
    <div style="border-bottom: solid 2px #ccc; padding-bottom:5px;">
        <div class="left">
            <img src="../images/baseimg/banner.png"/>
        </div>
        <div class="left pLeft10">
            <h2 id="memberRT" class="cblock">我的资料</h2>
            <span class="font10">管理个人资料</span>
        </div>
        <div class="clear"></div>
    </div>
    <form name="userInfoForm" action="">
        <table width="100%" border="0" cellpadding="0" cellspacing="0" class="memberTable"> 

          <tr>
            <th width="100" align="right">昵称：</th>
            <td><input type="text" name="nickName" value="@Model.UserInfo.NickName" class="text" maxlength="15" style="width:200px" />@*<span class="tip">这里是提示信息</span>*@</td>
          </tr>  
          <tr hidden>
            <th width="100" align="right">性别：</th>
            <td>
             <label class="radio"><input type="radio" name="gender" value="1" @{if(Model.UserInfo.Gender==1){<text>checked="checked"</text>}} />男</label>
             <label class="radio"><input type="radio" name="gender" value="2" @{if(Model.UserInfo.Gender==2){<text>checked="checked"</text>}} />女</label>
             <label class="radio"><input type="radio" name="gender" value="0" @{if(Model.UserInfo.Gender==0){<text>checked="checked"</text>}} />未知</label>
             </td>
          </tr>
              <tr hidden>
           <th width="100" align="right">手机：</th>
            <td><input type="text" style="border: none;width:200px" value="@Model.UserInfo.Mobile" class="text" @(string.IsNullOrEmpty(Model.UserInfo.Mobile)?"":"readonly=true") maxlength="18" style="width:200px" /> </td>
          </tr>
          <tr hidden>
            <th width="100" align="right">邮箱：</th>
            <td><input type="text"  style="border: none;width:200px" value="@Model.UserInfo.Email" class="text" @(string.IsNullOrEmpty(Model.UserInfo.Email)?"":"readonly=true") maxlength="18" style="width:200px" /><a class="tip" href="@Url.Action("safeinfo")" > @(string.IsNullOrEmpty(Model.UserInfo.Email)?"未绑定":"已绑定")</a></td>
          </tr>

          <tr hidden>
            <th width="100" align="right">收款人：</th>
            <td><input type="text" name="realName" value="@Model.UserInfo.RealName" @(string.IsNullOrEmpty(Model.UserInfo.RealName)?"":"readonly=true") class="text" maxlength="15" style="width:200px" /><span class="tip">必须与支付宝的收款姓名一致,填后不可修改</span></td>
          </tr> 
        <tr hidden>
            <th width="100" align="right">QQ：</th>
            <td><input type="text" name="qqNum" value="@Model.UserInfo.QQ"  @(string.IsNullOrEmpty(Model.UserInfo.QQ)?"":"readonly=true") class="text" maxlength="15" style="width:200px" /><span class="tip">填后不可修改</span></td>
          </tr> 
          <tr>
            <th width="100" align="right">&nbsp;</th>
            <td><a href="#" class="greenBT" style="font-size:14px; padding:3px 20px;" onclick="editUser()">提交</a></td>
          </tr>
        </table>
    </form> 
</div>

<div class="clear"></div>
</div>
<div class="clear"></div>
</div>


@Html.Partial("_footer")
</body>
</html>
